<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/grey"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.Fragment1">

    <com.example.horizontalcalendar.HorizontalCalender
        android:id="@+id/horizontal_calendar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:selectedColor="@color/teal_700"
        android:textColor="@color/white"
        app:strokeColor="@color/teal_200"
        app:strokeWidth="2dp"
        app:dayView="true"
        app:showTodayIcon="true"
        app:unSelectedColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="20dp"
        android:layout_below="@id/horizontal_calendar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Text Here"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginStart="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:weightSum="10">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp"
                android:layout_weight="4"
                android:backgroundTint="@color/very_light_grey"
                android:layout_marginEnd="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/card1Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Text Here"
                        android:textColor="@color/white"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/card1Text"
                        android:paddingEnd="15dp"
                        android:paddingStart="15dp"
                        android:background="@drawable/cross_image">

                        <ImageView
                            android:id="@+id/card1Image1Id"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/ic_outline_circle_24"
                            android:layout_below="@id/card1Text"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/card1Text"
                        android:paddingEnd="15dp"
                        android:paddingStart="15dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/cross_image">

                        <ImageView
                            android:id="@+id/card1Image2Id"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:src="@drawable/ic_outline_circle_24"/>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp"
                android:layout_weight="6"
                android:backgroundTint="@color/very_light_grey"
                android:layout_marginStart="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Text here"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Text here"
                        android:textStyle="bold"
                        android:layout_marginTop="15dp"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="10">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:cardCornerRadius="10dp"
                android:layout_weight="4"
                android:backgroundTint="@color/very_light_grey"
                android:layout_marginEnd="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/card3Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Text Here"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:layout_marginBottom="5dp"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="6"
                android:weightSum="6">
                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="2"
                    android:backgroundTint="@color/white"
                    android:layout_marginStart="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Text"
                            android:textColor="@color/black"
                            android:textSize="14sp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="2"
                    android:backgroundTint="@color/white"
                    android:layout_marginStart="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Text"
                            android:textColor="@color/black"
                            android:textSize="14sp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    app:cardCornerRadius="10dp"
                    android:layout_weight="2"
                    android:backgroundTint="@color/very_light_grey"
                    android:layout_marginStart="5dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Text"
                            android:textColor="@color/white"
                            android:textSize="14sp"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="10">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp"
                android:layout_weight="4"
                android:backgroundTint="@color/very_light_grey"
                android:layout_marginEnd="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/card2Text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Text Here"
                        android:textColor="@color/white"
                        android:layout_marginBottom="10dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/card2Text"
                        android:paddingEnd="15dp"
                        android:paddingStart="15dp"
                        android:background="@drawable/cross_image">

                        <ImageView
                            android:id="@+id/card2Image1Id"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:layout_alignParentStart="true"
                            android:src="@drawable/ic_outline_circle_24"
                            android:layout_below="@id/card1Text"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/card2Text"
                        android:paddingEnd="15dp"
                        android:paddingStart="15dp"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/cross_image">

                        <ImageView
                            android:id="@+id/card2Image2Id"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:src="@drawable/ic_outline_circle_24"/>

                    </LinearLayout>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                app:cardCornerRadius="10dp"
                android:layout_weight="6"
                android:backgroundTint="@color/very_light_grey"
                android:layout_marginStart="5dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="10dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Text here"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Text here"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:textSize="18sp"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Text here"
                        android:layout_marginTop="5dp"
                        android:textColor="@color/white"
                        android:textSize="14sp"/>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>